                                    <Binding ElementName="LastMantainCycleTB" Path="Text"/>
                                </MultiBinding>
                            </Label.Visibility>
                        </Label>
                    </StackPanel>
                    -->
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
